<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <div class="panel panel-success">
        <div class="panel-heading">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h3 class="panel-title">
            <%= @article.name %>の評価
          </h3>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover evaluate-table">
            <tr>
              <th class="evaluate-tableTitle">日時</th>
              <td><%= @evaluate.date.strftime("%y/%m/%d") %></td>
            </tr>
            <tr>
              <th>評価ポイント</th>
              <td>
                <span style="color: #fc3;"><% @evaluate.evaluate.times{ %>★<%} %></span><span style="color: #aaa;"><% (5 - @evaluate.evaluate).times{ %>☆<%} %></span>
              </td>
            </tr>
            <tr>
              <th>評価コメント</th>
              <td>
                <%= @evaluate.eva_comment%>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
