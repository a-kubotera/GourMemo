  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3 class="panel-title">評価の入力</h3>
          </div>
          <div class="panel-body">
            <% modal ||= false %>
            <% remote = modal ? true : false %>
            <%= form_for([@article,@evaluate], remote: true, authenticity_token: true) do |f| %>
              <table class="table table-striped table-hover evaluate-table">
                <tr>
                  <th class="evaluate-tableTitle">評価日</th>
                  <td class="form-group">
                    <%= f.date_field :date,id:"date", class: 'form-control' %>
                    <span class="help-block"></span>
                  </td>
                </tr>
                <tr>
                  <th>評価</th>
                  <td class="form-group">
                    <span class="range-group">
                    <%= f.range_field :evaluate,id:"evaluate", class: 'form-control ' %>
                  </span>
                    <span class="help-block"></span>
                  </td>
                </tr>
                <tr>
                  <th>コメント</th>
                  <td class="form-group">
                    <%= f.text_area :eva_comment,id:"eva_comment", class: 'form-control articleDetail-imput articleDetail-imput_textArea',placeholder:"良かった点や気になったことなど" %>
                    <span class="help-block"></span>
                  </td>
                </tr>
              </table>
              <%= f.submit "評価を登録",class:"btn btn-primary"%>
            <%end%>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
        </div>
      </div>
    </div>
  </div>

<script>
$(function() {
  $('.range-group').each(function() {
    //debugger
    for (var i = 0; i < 5; i ++) {
      $(this).append('<a>');
    }
  });
  $('.range-group>a').on('click', function() {
        //debugger;
     var index = $(this).index();
    $(this).siblings().removeClass('on');
     for (var i = 0; i < index; i++) {
        $(this).parent().find('a').eq(i).addClass('on');
     }
    $(this).parent().find('.evaluate-field').attr('value', index);

  });
});
</script>
