<% if @is_msg %>
  <div class="bs-component">
    <div class="alert alert-dismissible alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Tips</strong>
      現在、未評価のものはありません。<br>
      <br>
      行ってみたいお店や、テレビや雑誌で見て気になるお店はありませんか？<br>
      新しいお店を見つけたら<%= link_to new_article_path ,remote: true do %>登録してみましょう！<%end %>
    </div>
  </div>
<% end %>

<% articles.each do |article| %>
  <div class="articleList">
    <div class="articleList_header row"></div>
    <div class="row">
      <div class="articleList-picture col-xs-2">
        <%= set_picture(article.picture,"imageSize_indexArticle","test") %>
      </div>
      <div class="articleList-dateTime col-xs-10 text-muted">
        <%= article.created_at.strftime("%y/%m/%d %p %l:%M") %>投稿
      </div>
      <div class="articleList-title col-xs-10">
        <%= link_to article_path(id:article.id),remote:true,method: :get do %>
          <%= article.name %><%=article.id%>
        <% end %>
      </div>
      <div class="articleList-content col-xs-10">
        <%= article.art_comment %>
      </div>
    </div>
    <div class="articleList_footer row">
      <div class="col-xs-3">
        <% if article.user_info.id != article.user_info.id %>
          <div class="articleList-contributor">
            <p class="text-muted articleList_fontMinimum">
              ~recommended by
            </p>
            <%= link_to user_path(id:article.user_info.id) do %>
              <%= profile_img(article.user_info,"imageSize_indexAvatar") %>
              <%= article.user_info.name %>
            <% end %>
          </div>
        <% else %>
          <div class="articleList-button articleList-button_like">
            <ul class="nav nav-pills">
              <li class="active">
                <% article.likes.count == 0? @lc="like_none" : @lc="" %>
                <%= link_to "" ,id:@lc do %>
                  <i class="fa fa-thumbs-o-up fa-fw"></i>いいね!<span class="badge"><%= article.likes.count%></span>
                <%end%>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="col-xs-7">
        <%# 何を入れようか・・ %>
      </div>
      <% login_user?(article.user_info.id) do %>
        <div class="col-xs-2 articleList-button articleList-button_delete label-danger">
          <span>
            <% if article.evaluates.count > 0 || article.likes.count > 0
              @deleteWarning="<br>この記事は<p class='text-danger'>"
               if article.likes.count> 0
                 @deleteWarning +="● #{article.likes.count}人が注目しています。<br>"
               end
               if article.evaluates.count > 0
                 @deleteWarning +="● #{article.evaluates.count}人が評価しています。<br>"
               end
               @deleteWarning +="<br>記事を削除すると、これらの情報も一緒に消えてしまいます。</p>"
            else
              @deleteWarning ="<br>"
            end
            %>

            <%= link_to article_path(id:article.id), method: :delete, data: { confirm:
              "本当にこの記事を削除してもよろしいでしょうか？<br>
              #{@deleteWarning}
              確認のため下記の文字列を入力してください。<br>
              <p class='well well-sm'>#{@CAPTCHA = (0...8).map{ (65 + rand(26)).chr }.join}</p>",
              "commit" => "削除する",
              "cancel" => "やっぱりやめる",
              "verify" => @CAPTCHA,
              },
              title: "記事の削除" do %><i class="fa fa-trash-o fa-fw"></i> 削除する
            <% end %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<div id="user-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
