<div class="modal-dialog">
  <div class="modal-content">
    <% modal ||= false %>
    <% remote = modal ? true : false %>
    <%= form_for(@article, remote: remote, html: {role: :form, 'data-model' => 'article'}) do |f| %>
      <div class="modal-header">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <% if @article.id.blank? %>
            <h3 class="panel-title">新規登録</h3>
            <% else %>
            <h3 class="panel-title">~修正画面~ 投稿ID：<%=@article.id %> / 投稿者名：<%=@article.user_info.name %></h3>
            <% end %>
          </div>
          <div class="panel-body">
            <%# 複数登録し、スライド式にしたい！%>
            <div class="articleDetail-picture col-xs-12">
              <div class="preview"></div>
              <% unless @article.picture.blank? %>
                <div class="img">
                  <div class="thumbnail" id="thumbnail">
                    <%=  set_picture(@article.picture,"imageSize_detailArticle","PostPicture") %>
                  </div>
                </div>
              <% end %>
              <div class="articleDetail-picture_button">
                <%= f.label :picture, class: "btn btn-primary " do%>
                  <i class="glyphicon glyphicon-camera" aria-hidden="true">
                    <span>写真を選ぶ</span>
                  <%= f.file_field :picture,style: "display:none;" %>
                  <%= f.hidden_field :picture_cache %>
                </i>
                <% end %>
              </div>
            </div>
            <table class="table table-striped table-hover articleDetail-dataTable">
              <tr>
                <th>お店の名前</th>
                <td><%= f.text_field :name,id:"name",class:"articleDetail-imput" %></td>
              </tr>
              <tr>
                <th>お店の場所</th>
                <td><%= f.text_field :station,id:"station",class:"articleDetail-imput" %></td>
              </tr>
              <tr>
                <th>コメント</th>
                <td><%= f.text_area :art_comment, autofocus: true,id:"art_comment",class:"articleDetail-imput articleDetail-imput_textArea" %></td>
              </tr>
              <tr>
                <th>ジャンル</th>
                <td><%= f.select :genre, Article.genres.keys.to_a, {} %></td>
              </tr>
            </table>
            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title">詳細情報</h3>
              </div>
              <div class="panel-body">
                <div class="form-group">
                  <%= f.label :address, class: 'control-label' %><br>
                  <%= f.text_field :address, class: 'form-control' %>
                  <span class="help-block"></span>
                </div>
                <div class="form-group">
                  <%= f.label :tell, class: 'control-label' %><br>
                  <%= f.text_field :tell, class: 'form-control' %>
                  <span class="help-block"></span>
                </div>
                <div class="form-group">
                  <label for="name" class="col-xs-12 control-label">営業時間</label>
                  <input type="text" class="form-control" id="inputWarning" placeholder="未実装 準備中" disabled="">
                  <span class="help-block"></span>
                </div>
                <div class="form-group">
                  <%= f.label :parking, class: 'control-label' %><br>
                  <%= f.select :parking, Article.parkings.keys.to_a, {} %>
                  <span class="help-block"></span>
                </div>
              </div>
            </div>
            <%= f.submit "登録する",class:"btn btn-primary"%>
          </div>
        </div>
      </div>
    <% end %>
    <div class="modal-footer">
      <%#エラーで遷移後にウインドウを閉じれないため、Backにする。要検討 %>
      <%= link_to '閉じる',:back ,class:"btn btn-default"%>
    </div>
  </div>
</div>
