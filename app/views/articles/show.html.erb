<h1>タイトル: <%= @articles.name %></h1>
<h2>投稿者: <%= @articles.user_info.name %>さん</h2>

<h3>本文</h3>
<p><%= @articles.art_comment %></p>
<h3>いいね件数: <%= @articles.likes.count %></h3>
<% if current_user.already_liked?(@articles) %>
  <%= button_to 'いいねを取り消す', article_like_path(@articles,@articles.likes), method: :delete %>
<% else %>
  <%= form_for [@articles, @like] do |f| %>
  <% if @like.errors.any? %>
    <% @like.errors.full_messages.each do |msg| %>
      <li style="color: red;"><%= msg %></li>
    <% end %>
  <% end %>
    <%= f.submit 'いいね！' %>
  <% end %>
<% end %>
<h2>この記事にいいねしたユーザー</h2>
<% @articles.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>
