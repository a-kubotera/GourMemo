<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h3 class="panel-title">行ってみたいお店！</h3>
        </div>
        <div class="panel-body">
      <%# 複数登録し、スライド式にしたい！%>
      <div class="articleDetail-picture col-xs-12"><%= set_picture(@article.picture,"imageSize_detailArticle","test") %></div>

      <table class="table table-striped table-hover ">
        <tr>
          <th>お店の名前</th>
          <td><%= @article.name%></td>
        </tr>
        <tr>
          <th>お店の場所</th>
          <td><%= @article.station%></td>
        </tr>
        <tr>
          <th>紹介コメント</th>
          <td><%= @article.art_comment%></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @article.genre%></td>
        </tr>
      </table>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">詳細情報</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label for="name" class="col-lg-2 control-label">お店の住所</label>
            <div class="col-lg-10">
              <%= @article.name%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



      <div class="row userDataInput__items">
                <div class="col-md-6 input-field">
                  <i class="material-icons prefix">account_circle</i>
                  <label for="name">お名前</label>
                </div>
                <div class="col-md-6 input-field">
                  <i class="material-icons prefix">email</i>

                  <label for="email" data-success="right">E-mail</label>
                </div>
                <div class="col-md-6 input-field">
                  <i class="material-icons prefix">cake</i>

                  <label for="birthday">誕生日</label>
                </div>
                <div class="col-md-6 input-field">
                  <i class="material-icons prefix">account_circle</i>

                  <label for="icon_prefix">年齢</label>
                </div>
                <div class="col-md-12 input-field">
                  <i class="material-icons prefix">person_pin</i>

                  <label for="address">住所</label>
                </div>
                <div class="col-md-12 input-field">
                  <i class="mdi-editor-mode-edit prefix"></i>

                  <label for="introduction">自己紹介</label>
                </div>

      <div class="articleDetail-like" style="display:">
        <h3>いいね件数: <%= @article.likes.count %></h3>
        <div class="articleDetail-like like-button">
          <% if current_user.already_liked?(@article) %>
            <%= button_to 'いいねを取り消す', article_like_path(@article,@article.likes), method: :delete %>
          <% else %>
            <%= form_for [@article, @like] do |f| %>
              <% if @like.errors.any? %>
                <% @like.errors.full_messages.each do |msg| %>
                  <li style="color: red;"><%= msg %></li>
                <% end %>
              <% end %>
              <%= f.submit 'いいね！' %>
            <% end %>
          <% end %>
        </div>
        <h2>この記事にいいねしたユーザー</h2>
        <div class="articleDetail-like like-users">
          <% @article.liked_users.each do |user| %>
            <li><%= user.email %></li>
          <% end %>
        </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      <button type="button" class="btn btn-primary">保存</button>
    </div>
  </div>
</div>
